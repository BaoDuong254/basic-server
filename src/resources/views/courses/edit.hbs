<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <textarea
        type="text"
        class="form-control"
        id="name"
        name="name"
      >{{course.name}}</textarea>
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        type="text"
        class="form-control"
        id="description"
        name="description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoID">Video ID</label>
      <textarea
        type="text"
        class="form-control"
        id="videoID"
        name="videoID"
      >{{course.videoID}}</textarea>
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <textarea
        class="form-control"
        id="level"
        name="level"
      >{{course.level}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>